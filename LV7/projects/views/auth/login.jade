extends ../layout

block content
  .app-bar
    .align-center.flex
      a(href='/projects')
        i.icon.mr-2 assignment
      h3(style='color:white; margin:0') Prijava

  .container
    .card(style='max-width: 400px; margin: 40px auto')
      h1 dobrodošli natrag
      if message && message.length > 0
        p(style='color: var(--error-color); font-size: 14px')= message
      
      form(action='/auth/login', method='POST')
        .form-group
          label(for='username') Korisničko ime
          input#username(type='text', name='username', required, placeholder='Korisničko ime')
        .form-group
          label(for='password') Lozinka
          input#password(type='password', name='password', required, placeholder='Lozinka', style='width: 100%; padding: 12px 0; border: none; border-bottom: 1px solid rgba(0,0,0,0.12); font-size: 16px; background: transparent; outline: none;')
        
        .mt-2
          button.btn.btn-primary(type='submit', style='width: 100%') Prijavi se
        
      .mt-2(style='text-align: center')
        p Nemate račun? 
          a(href='/auth/register') Registrirajte se
